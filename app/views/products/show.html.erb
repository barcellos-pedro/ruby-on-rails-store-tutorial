<% cache @product do %>
  <h1><%= @product.name %></h1>
  <%= @product.description %>
<% end %>

<%= render "inventory", product: @product %>

<% if @product.featured_image.attached? %>
  <%= image_tag @product.featured_image, style: "margin-top: 1em" %>
<% end %>

<%= render "actions", product: @product %>
